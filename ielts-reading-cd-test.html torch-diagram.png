<script>
let time = 20 * 60;
const timerDisplay = document.getElementById("timer");

const countdown = setInterval(() => {
    let min = Math.floor(time / 60);
    let sec = time % 60;
    timerDisplay.textContent = min + ":" + (sec < 10 ? "0" : "") + sec;
    time--;
    if (time < 0) {
        clearInterval(countdown);
        submitTest();
    }
}, 1000);

const answers = {
    q1: "G",
    q2: "A",
    q3: "F",
    q4: "C",
    q5: "A",
    q6: "F",
    q7: "B",
    q8: "C",
    q9: "D",
    q10: "handle",
    q11: "gas",
    q12: "holes",
    q13: "propane, butane"
};

function submitTest() {
    clearInterval(countdown);
    let score = 0;

    for (let q in answers) {
        let el = document.getElementById(q);
        if (!el) continue;

        let user = el.value.trim().toLowerCase();
        let correct = answers[q].toLowerCase();

        if (user === correct) {
            el.classList.add("correct");
            score++;
        } else {
            el.classList.add("incorrect");
        }
        el.disabled = true;
    }

    document.getElementById("score").textContent =
        "Your score: " + score + " / 13";
}
</script>

